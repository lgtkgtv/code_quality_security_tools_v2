[flake8]
# Maximum line length
max-line-length = 88

# Extend ignore list
extend-ignore = 
    E203,  # Whitespace before ':'
    W503,  # Line break before binary operator
    E501   # Line too long (handled by black)

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    .venv

# Per-file ignores
per-file-ignores = 
    __init__.py:F401